<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.audiobookapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeadershipActivity"
            android:label="Leadership"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".InvestingActivity"
            android:label="Investing"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".EntrepreneurActivity"
            android:label="Entrepreneurship"
            android:parentActivityName=".MainActivity"></activity>

        <activity
            android:name=".PlayerActivity"
            android:label="Now Listening"></activity>
    </application>

</manifest>